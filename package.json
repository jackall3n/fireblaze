{
  "name": "fireblaze",
  "version": "1.2.1",
  "description": "Schema migration tool for Firestore",
  "types": "fireblaze.d.ts",
  "keywords": [
    "schema",
    "migration",
    "firestore",
    "typescript"
  ],
  "files": [
    "/src",
    "LICENSE",
    "README.md",
    "fireblaze.d.ts"
  ],
  "main": "src/index.js",
  "bin": "src/cli.js",
  "repository": "git@github.com:jackall3n/fireblaze.git",
  "author": "jackall3n <jackallesemail+git@gmail.com>",
  "license": "MIT",
  "scripts": {
    "setup": "firebase setup:emulators:firestore",
    "emulator": "firebase emulators:start --only firestore",
    "test-runner": "node tests",
    "pretest": "mkdir -p tests/emptyMigration",
    "test": "FIRESTORE_EMULATOR_HOST=0.0.0.0:8181 start-test emulator tcp:8181 test-runner",
    "release": "pnpm test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm login && npm publish",
    "ci:publish": "pnpm publish -r"
  },
  "husky": {
    "hooks": {
      "pre-push": "pnpm test"
    }
  },
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "callsites": "^3.1.0",
    "firebase-admin": "^10.1.0",
    "md5": "^2.2.1",
    "sade": "^1.6.1",
    "semver": "^7.3.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@firebase/rules-unit-testing": "^1.0.4",
    "@types/node": "^14.18.16",
    "capture-console": "^1.0.1",
    "firebase-tools": "^10.7.2",
    "husky": "^9.0.11",
    "start-server-and-test": "^1.14.0",
    "tape": "^4.13.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
